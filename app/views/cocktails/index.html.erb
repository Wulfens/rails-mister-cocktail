<div class="container">
    <h1>Cocktails (<%= Cocktail.count %>)</h1>
    <div class="cards">
    
        <% @cocktails.each do |cocktail| %>
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
                <p class="card-text"><%= cocktail.description %></p>
                <div class="card-footer">
                    <%= link_to "Discover", cocktail_path(cocktail) %>
                </div>
            </div>
        </div>
        <% end %>

    
    </div>
</div>
